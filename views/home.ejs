<%- include('partials/header') %>
<h1>Home</h1>
<p><% if (posts.length == 0) { %>
    <a class="compose-btn btn btn-success btn-large" href="/compose">+ Compose a Post</a>
<% } %></p>

<% posts.forEach(post => { %>
    <a class="post" href="/posts/<%= post.title %>/<%= post._id %>">
        <div class="post-box">
    <h1><%= post.title %></h1>
    <p><%= post.content.slice(0, 100); %>
        <% if(post.content.length > 100) { %>
            ...
        <% } %>
    </p></div></a>
<% }) %>

<%- include('partials/footer') %>


